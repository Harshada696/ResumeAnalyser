{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksConfig": {
      "phases": {
        "setup": {
          "nixPkgs": ["python311", "pip"]
        },
        "install": {
          "cmds": ["pip install -r backend/requirements.txt"]
        },
        "start": {
          "cmd": "gunicorn backend.app:app"
        }
      }
    }
  }
}
